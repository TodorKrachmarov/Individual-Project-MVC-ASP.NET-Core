@model DeleteCategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryToDelete"></label>
                <select asp-for="CategoryToDelete" asp-items="@Model.Categories" required class="form-control"></select>
                <span asp-validation-for="CategoryToDelete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryToTransfer"></label>
                <select asp-for="CategoryToTransfer" asp-items="@Model.Categories" required class="form-control"></select>
                <span asp-validation-for="CategoryToTransfer" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




